@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Inventario";
}
@{

    Entidad.MEDICINA dbmed = new Entidad.MEDICINA();
}
<br />
<br />
<br />
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                Inventario<a title="Nuevo" class="btn btn-info" href="Create"><i> Nuevo </i></a>
            </h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table id="tbInventario" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                    <tr>
                        <th>Id Inventario</th>

                        <th> Tipo de Inventario</th>

                        <th>Medicina</th>

                        <th>Cantidad</th>

                        <th>Sucursal</th>

                    </tr>
                    <tbody id="Contenido">
                       
                    </tbody>
                </table><!-- /.table -->
            </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
    </div><!-- /. box -->


</section>

<script type="text/javascript">
$(document).ready(function () {
       $.ajax({
           url: "@Url.Action("Inventario_", "Inventario")",
           data: { },
                type: "GET",
                contentType: "application/x-www-form-urlencoded",
                dataType: "json",
                success: function (data) {
                   //console.log(data);

                    $("#Contenido").html('');
                    if (data != null && $.isArray(data)) {
                        $.each(data, function (index, value) {
                            $("#Contenido").append("<tr><td>" + value.ID_INVENTARIO +"</td><td>" + value.TIPO_INVENTARIO + "</td><td>" + value.MEDICINA + "</td><td>" + value.CANTIDAD + "</td><td>" + value.SUCURSAL + "</td</tr>");
                        });
                    }
                }
        });
    });
</script>

