@model IEnumerable<Entidad.SUCURSAL>

@{
    ViewBag.Title = "Sucursal";
}
<br />
<br />
<br />

<section class="content">
    <div class="row">
        <div class="col-md-12">
        </div><!-- /.col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Sucursal <a title="Nuevo" class="btn btn-default btn-sm checkbox-toggle" href="Create"><i class="fa fa-file-o"> Nuevo </i></a>
                                 <a title="Eliminar" class="btn btn-default btn-sm checkbox-toggle" href="Delete"><i class="fa fa-file-o"> Eliminar </i></a>
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive mailbox-messages">
                        <table id="tblsucursal" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ID_SUCURSAL)</th>

                                <th>@Html.DisplayNameFor(model => model.NOMBRE)</th>

                                <th>@Html.DisplayNameFor(model => model.DIRECCION)</th>

                                <th>@Html.DisplayNameFor(model => model.TELEFONO)</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modeltem => item.ID_SUCURSAL)</td>

                                    <td>@Html.DisplayFor(modeltem => item.NOMBRE)</td>

                                    <td>@Html.DisplayFor(modeltem => item.DIRECCION)</td>

                                    <td>@Html.DisplayFor(modeltem => item.TELEFONO)</td>
                                </tr>
                            }
                        </table><!-- /.table -->
                    </div><!-- /.mail-box-messages -->
                </div><!-- /.box-body -->
            </div><!-- /. box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

