@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@{
    ViewBag.Title = "Examen";
}
<br />
<br />
<br />
<section class="content col-xs-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                Examen <a title="Nuevo" class="btn btn-info" href="Create"><i> Nuevo </i></a>
            </h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table id="tblpaciente" class="table table-striped table-bordered dt-responsive display text-nowrap" cellspacing="0" width="100%">
                    <tr>
                        <th>Examen</th>

                        <th>Nombre de Examen</th>

                        <th>Precio</th>

                        <th>Recomendacion</th>

                        <th>Descripcion</th>

                        <th>Tratamiento</th>
                    </tr>
                    <tbody id="Contenido">
                    </tbody>
                </table><!-- /.table -->
            </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
    </div><!-- /. box -->
</section>
<script type="text/javascript">
$(document).ready(function () {
       $.ajax({
           url: "@Url.Action("Examen_", "Examen")",
           data: { },
                type: "GET",
                contentType: "application/x-www-form-urlencoded",
                dataType: "json",
                success: function (data) {
                   //console.log(data);

                    $("#Contenido").html('');
                    if (data != null && $.isArray(data)) {
                        $.each(data, function (examen, value) {
                            $("#Contenido").append("<tr><td>" + value.ID_EXAMEN + "</td><td>"
                                + value.NOMBRE_EXAMEN + "</td><td>"
                                + value.PRECIO + "</td><td>"
                                + value.RECOMENDACION + "</td><td>"
                                + value.DESCRIPCION + "</td><td>"
                                + value.TRATAMIENTO + "</td><td>"
                                + "</td>+ <td><button id='btnEditar' type='button' title='Editar' class='btn btn-info btn-sm'>Editar</button></td></tr > ");
                        });
                    }
                }
        });
});
</script>