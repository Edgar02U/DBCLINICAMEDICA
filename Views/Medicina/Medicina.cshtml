@model IEnumerable<Entidad.MEDICINA>


@Styles.Render("~/bundles/css")
@Scripts.Render("~/bundles/script")
@{
    ViewBag.Title = "Medicina";
}
<br />
<br />
<br />
<section class="content">
    <div class="row">
        <div class="col-md-12">
        </div><!-- /.col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Medicina <a title="Nuevo" class="btn btn-info" href="Create"><i> Nuevo </i></a>
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive mailbox-messages">
                        <table id="tblmedicina" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ID_MEDICINA)</th>

                                <th>@Html.DisplayNameFor(model => model.NOMBRE)</th>

                                <th>@Html.DisplayNameFor(model => model.DESCRIPCION)</th>

                                <th>Acciones</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modeltem => item.ID_MEDICINA)</td>

                                    <td>@Html.DisplayFor(modeltem => item.NOMBRE)</td>

                                    <td>@Html.DisplayFor(modeltem => item.DESCRIPCION)</td>
                                    <td nowrap>
                                        <button title="Editar" onclick="location.href='@Url.Action("Editar", new { id = item.ID_MEDICINA })';return false;" class="btn btn-info"><i class="fa fa-reply"></i> Editar</button>
                                        <button title="Eliminar" onclick="location.href='@Url.Action("Eliminar", new { id = item.ID_MEDICINA})'; return false;" class="btn btn-info"><i class="fa fa-reply"></i> Eliminar</button>
                                    </td>
                                </tr>
                            }

                        </table><!-- /.table -->
                    </div><!-- /.mail-box-messages -->
                </div><!-- /.box-body -->
            </div><!-- /. box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

