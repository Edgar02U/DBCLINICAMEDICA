@model IEnumerable<Entidad.CITAS>
@{
    ViewBag.Title = "Cita";
}


<section class="content">


    <br /><br /><br />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Cita<a title="Nuevo" class="btn btn-default btn-sm checkbox-toggle" href="Create"><i class="fa fa-file-o"> Nuevo </i></a></h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table id="tbcita" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ID_CITA)</th>

                        <th>@Html.DisplayNameFor(model => model.FECHA)</th>

                        <th>@Html.DisplayNameFor(model => model.OBOSERVACIONES)</th>

                        <th>@Html.DisplayNameFor(model => model.ID_PACIENTE)</th>

                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modeltem => item.ID_CITA)</td>

                                <td>@Html.DisplayFor(modeltem => item.FECHA)</td>

                                <td>@Html.DisplayFor(modeltem => item.OBOSERVACIONES)</td>

                                <td>@Html.DisplayFor(modeltem => item.ID_PACIENTE)</td>

                                <td>
                                    <button title="Editar" onclick="location.href='@Url.Action("Edit", new { id = item.ID_CITA })';return false;" class="btn btn-default btn-sm"><i class="fa fa-pencil">Editar</i></button>
                                    <button title="Eliminar" onclick="location.href='@Url.Action("Delete", new { id = item.ID_CITA})'; return false;" class="btn btn-default btn-sm"><i class="fa fa-trash-o">Eliminar</i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!-- /.table -->
            </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
    </div><!-- /. box -->


</section>

