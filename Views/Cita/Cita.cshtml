@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Cita";
}

<br />
<br />
<br />
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                Cita <a title="Nuevo" class="btn btn-default btn-sm checkbox-toggle" href="Create"><i class="fa fa-file-o"> Nuevo </i></a>
                     <a title="Eliminar" class="btn btn-default btn-sm checkbox-toggle" href="Delete"><i class="fa fa-file-o"> Eliminar </i></a>
            </h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table id="tbcita" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                    <tr>
                        <th>Id</th>
                        <th>Fecha</th>
                        <th>Observaciones</th>
                        <th>Paciente</th>
                    </tr>
                    <tbody id="Contenido">
                       
                    </tbody>
                </table><!-- /.table -->
            </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
    </div><!-- /. box -->
</section>

<script type="text/javascript">
$(document).ready(function () {
       $.ajax({
           url: "@Url.Action("Citas_", "Cita")",
           data: { },
                type: "GET",
                contentType: "application/x-www-form-urlencoded",
                dataType: "json",
                success: function (data) {
                   //console.log(data);

                    $("#Contenido").html('');
                    if (data != null && $.isArray(data)) {
                        $.each(data, function (index, value) {

                            var dt = new Date(parseInt(value.FECHA.replace('/Date(', '')));
                            var dateFinal = addNewFormatDate(dt.getDate(), 2) + '/' + addNewFormatDate(dt.getMonth() + 1, 2) + '/' + addNewFormatDate(dt.getFullYear(), 4);

                            $("#Contenido").append("<tr><td>" + value.ID_CITA + "</td><td>" + dateFinal + "</td><td>" + value.OBOSERVACIONES + "</td><td>" + value.PACIENTE + "</td</tr>");
                        });
                    }
                }
        });
    });

    function addNewFormatDate(number, size) {
        var s = "0000" + number;
        return s.substr(s.length - size);
    }
</script>