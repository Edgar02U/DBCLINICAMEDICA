
@model IEnumerable<Entidad.PACIENTE>
@{
    ViewBag.Title = "Pacientes";
}
<br />
<br />
<br />
<section class="content">
    <div class="row">
        <div class="col-md-12">
        </div><!-- /.col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Paciente <a title="Nuevo" class="btn btn-primary" href="Create"><i class="far fa-file">Nuevo  </i></a></h3>                    
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive mailbox-messages">
                        <table id="tblpaciente" class="table table-striped table-bordered dt-responsive display" cellspacing="0" width="100%">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ID_PACIENTE)</th>

                                <th>@Html.DisplayNameFor(model => model.PRIMER_NOMBRE)</th>

                                <th>@Html.DisplayNameFor(model => model.SEGUNDO_NOMBRE)</th>

                                <th>@Html.DisplayNameFor(model => model.PRIMER_APELLIDO)</th>

                                <th>@Html.DisplayNameFor(model => model.SEGUNDO_APELLIDO)</th>

                                <th>@Html.DisplayNameFor(model => model.EDAD)</th>

                                <th>@Html.DisplayNameFor(model => model.DIRECCION)</th>

                                <th>@Html.DisplayNameFor(model => model.FECHA_NACIMIENTO)</th>

                                <th>@Html.DisplayNameFor(model => model.TELEFONO)</th>

                                <th>@Html.DisplayNameFor(model => model.CORREO_ELECTRONICO)</th>

                                <th>@Html.DisplayNameFor(model => model.ID_SUCURSAL)</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modeltem => item.ID_PACIENTE)</td>

                                    <td>@Html.DisplayFor(modeltem => item.PRIMER_NOMBRE)</td>

                                    <td>@Html.DisplayFor(modeltem => item.SEGUNDO_NOMBRE)</td>

                                    <td>@Html.DisplayFor(modeltem => item.PRIMER_APELLIDO)</td>

                                    <td>@Html.DisplayFor(modeltem => item.SEGUNDO_APELLIDO)</td>

                                    <td>@Html.DisplayFor(modeltem => item.EDAD)</td>

                                    <td>@Html.DisplayFor(modeltem => item.DIRECCION)</td>

                                    <td>@Html.DisplayFor(modeltem => item.FECHA_NACIMIENTO)</td>
                                    <td>@Html.DisplayFor(modeltem => item.TELEFONO)</td>

                                    <td>@Html.DisplayFor(modeltem => item.CORREO_ELECTRONICO)</td>

                                    <td>@Html.DisplayFor(modeltem => item.ID_SUCURSAL)</td>
                                    <td>
                                        <button title="Editar" onclick="location.href='@Url.Action("Edit", new { id = item.ID_PACIENTE })';return false;" class="btn btn-default btn-sm"><i class="fa fa-pencil">Editar</i></button>
                                        <button title="Eliminar" onclick="location.href='@Url.Action("Delete", new { id = item.ID_PACIENTE})'; return false;" class="btn btn-default btn-sm"><i class="fa fa-trash-o">Eliminar</i></button>
                                    </td>
                                </tr>
                            }

                        </table><!-- /.table -->
                    </div><!-- /.mail-box-messages -->
                </div><!-- /.box-body -->
            </div><!-- /. box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
