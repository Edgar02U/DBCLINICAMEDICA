
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Paciente";
}
<br />
<br />
<br />


<section class="content col-xs-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                Paciente <a title="Nuevo" class="btn btn-default btn-sm checkbox-toggle" href="Create"><i class="fa fa-file-o"> Nuevo </i></a>
                <a title="Eliminar" class="btn btn-default btn-sm checkbox-toggle" href="Delete"><i class="fa fa-file-o"> Eliminar </i></a>
            </h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table id="tblpaciente" class="table table-striped table-bordered dt-responsive display text-nowrap" cellspacing="0" width="100%">
                    <tr>
                        <th>Id</th>

                        <th>Primer Nombre</th>

                        <th>Segundo Nombre</th>

                        <th>Primer Apellido</th>

                        <th>Segudno Apellido</th>

                        <th>Edad</th>

                        <th>Direccion</th>

                        <th>Fecha Nacimiento</th>

                        <th>Telefono</th>

                        <th>Correo Electronico</th>

                        <th>Sucursal</th>
                        <th>Acciones</th>
                    </tr>
                    <tbody id="Contenido">
                    </tbody>
                </table><!-- /.table -->
            </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
    </div><!-- /. box -->
</section>

<script type="text/javascript">
$(document).ready(function () {
       $.ajax({
           url: "@Url.Action("Paciente_", "Paciente")",
           data: { },
                type: "GET",
                contentType: "application/x-www-form-urlencoded",
                dataType: "json",
                success: function (data) {
                   //console.log(data);

                    $("#Contenido").html('');
                    if (data != null && $.isArray(data)) {
                        $.each(data, function (index, value) {

                            var sNombre = "";
                            var sApellido = "";

                            if (value.SEGUNDO_NOMBRE != null) {
                                sNombre = value.SEGUNDO_NOMBRE;
                            }

                            if (value.SEGUNDO_APELLIDO != null) {
                                sApellido = value.SEGUNDO_APELLIDO;
                            }

                            var dt = new Date(parseInt(value.FECHA_NACIMIENTO.replace('/Date(', '')));
                            var dateFinal = addNewFormatDate(dt.getDate(), 2) + '/' + addNewFormatDate(dt.getMonth() + 1, 2) + '/' + addNewFormatDate(dt.getFullYear(), 4);
                            $("#Contenido").append("<tr><td>" + value.ID_PACIENTE
                                + "</td><td>" + value.PRIMER_NOMBRE + "</td><td>"
                                + sNombre + "</td><td>" + value.PRIMER_APELLIDO
                                + "</td><td>" + sApellido + "</td><td>" + value.EDAD
                                + "</td><td>" + value.DIRECCION + "</td><td>"
                                + dateFinal + "</td><td>" + value.TELEFONO
                                + "</td><td>" + value.CORREO_ELECTRONICO
                                + "</td><td>" + value.SUCURSAL
                                + "</td>+ <td><button id='btnEditar' type='button' title='Editar' class='btn btn-info btn-sm'>Editar</button></td>"
                                + "</td>+ <td><button id='btnEliminar' type='button' title='Editar' class='btn btn-warning btn-sm'>Eliminar</button></td></tr > ");
                        });
                    }
                }
        });
});

    $(document).on("click", "#tblpaciente tbody tr", function () {
        var id = $(this).find('td:first-child').html();
           $.ajax({
           url: "@Url.Action("Editar", "Paciente")",
           data: {id:id },
                type: "GET",
                contentType: "application/x-www-form-urlencoded",
               dataType: "json"
               //success: function (data) {
               //    window.location.href = '/Editar/Paciente/' + id;
               //}
            });
    });

    $(document).on("click", "#tblpaciente tbody tr", function () {
        var id = $(this).find('td:first-child').html();
           $.ajax({
           url: "@Url.Action("Eliminar", "Paciente")",
           data: {id:id },
                type: "POST",
                contentType: "application/x-www-form-urlencoded",
               dataType: "json"
               //success: function (data) {
               //    window.location.href = '/Editar/Paciente/' + id;
               //}
            });
    });

    //$(document).ready(function () {
    //    $("#btnEditar").click(function () {
    //        console.log("Estamos aprendiendo");
    //    });
    //});

    function addNewFormatDate(number, size) {
        var s = "0000" + number;
        return s.substr(s.length - size);
    }
</script>